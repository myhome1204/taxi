<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/round_box_light_grey">
    <androidx.cardview.widget.CardView
        android:id="@+id/map_card_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_marginTop="7dp"
                android:layout_marginStart="7dp"
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_grey"
                android:textColor="#ffffff"
                android:text="2/4"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginBottom="7dp"
                android:layout_marginStart="7dp"
                android:id="@+id/price"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_grey"
                android:textColor="#ffffff"
                android:text="₩ 16,000"
                android:textStyle="bold"
                android:layout_gravity="bottom|start"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/information"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/map_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/left_view"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/time_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12시35분까지"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/location" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/start_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기흥역 5번출구"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/location" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/end_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기흥역 5번출구"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.widget.Button
            android:layout_gravity="center"
            android:id="@+id/create_room_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="합승하기"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_box"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/information"/>
</androidx.constraintlayout.widget.ConstraintLayout>
