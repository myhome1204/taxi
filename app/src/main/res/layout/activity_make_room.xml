<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MakeRoomActivity">

    <!-- Map Fragment Container -->
    <FrameLayout
        android:id="@+id/map_fragment_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/yourLinearLayout"
        android:layout_marginBottom="8dp" />

    <!-- Linear Layout for dynamic ImageView -->
    <LinearLayout
        android:id="@+id/yourLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/map_fragment_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />


    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- 도착 시간 정보 -->
        <TextView
            android:id="@+id/tv_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12시 35분까지"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 위치 정보 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <!-- Location Icon -->
                <ImageView
                    android:id="@+id/iv_location_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_marginEnd="8dp" />

                <!-- Location Text -->
                <TextView
                    android:id="@+id/tv_location_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기흥역 5번 출구"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <!-- Location Icon -->
                <ImageView
                    android:id="@+id/iv_location_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_marginEnd="8dp" />

                <!-- Location Text -->
                <TextView
                    android:id="@+id/tv_location_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="명지대학교 자연캠퍼스"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 계좌번호 섹션 -->
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/tv_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌번호"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목적지에 도착하면 알려드릴게요"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="16dp" />

        <!-- 요금 섹션 -->
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/tv_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요금"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_fee_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목적지에 도착하면 알려드릴게요"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="16dp" />

        <!-- 링크 URL 섹션 -->
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/tv_link_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="링크 URL"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_box_light_grey"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="https://teximate.com/id?=13414"
                android:textColor="#000000"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
